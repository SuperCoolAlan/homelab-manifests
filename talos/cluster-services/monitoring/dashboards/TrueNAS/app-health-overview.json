      },
      "gridPos": {
        "h": 4,
        "w": 12,
        "x": 12,
        "y": 12
      },
      "id": 12,
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "textMode": "value_and_name"
      },
      "targets": [
        {
          "expr": "sum(container_cpu_cfs_throttled_periods_total{namespace=~\"$namespace\", pod=~\"$pod\", container!=\"\"}) by (namespace, pod, container)",
          "legendFormat": "{{container}}"
        }
      ],
      "title": "Throttled Periods (absolute)",
      "type": "stat"
    },
